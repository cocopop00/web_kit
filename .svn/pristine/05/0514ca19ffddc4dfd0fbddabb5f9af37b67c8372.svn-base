.borderline2 {
position:relative;
top: 15px;
border-top: solid; 	
border-top-width: 3px;
color: black;
margin-left: 40px;
}

.header_margin2 {
	display: flex;
	flex-direction: column;
	width: 100%;
	align-items: left;
	padding: 10px 100px 0 0;
	margin: 0 0 0 0px;
}



.middle_nav {
	position:relative;
	top:30px;
	/* width: 100%; */
	margin-left:0px;
	display: flex;
	align-items: center;
	padding: 5px 20px 5px 20px;
	text-decoration: none;
}


.middle_toogleBtn {
	align-items: center;
	text-decoration: none;
	display: flex;
	font-size: 25px;
	color: #751aff;
	padding: 10px 20px;
}
.toogleBtn_all {
	padding: 0;
	list-style: none;
	font-size: 20px;
	color: black;
}

.middle_menu {
	display: flex;
	font-size: 20px;
	list-style: none;
	text-decoration: none;
	margin: 0;
	padding: 20px 20px;
}

.middle_a{
	text-decoration: none;
	color: black;
	padding: 2px 50px;
}

.middle_menu li :hover{
	background-color: #c299ff;
	border-radius: 6px;
	color: white;
}
/* ==========================================================< header end */

/* ==========================================================< windowframe start */

@media screen and (max-width:800px) {
	.navbar{
		flex-direction: column;
	}
	
	.middle_nav{
		flex-direction: column;
	} 
	.middle_menu{
		flex-direction: column;
	}
}
/* ==========================================================< windowframe end */