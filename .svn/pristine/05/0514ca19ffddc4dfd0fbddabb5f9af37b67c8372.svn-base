@charset "UTF-8";



body{
	margin: 0;
	background-color: #ffffff;
}

/* ==========================================================< header start  */

.header_login {
	display: flex;
	flex-direction: column;
	width:75%;
	height:20px;
	align-items: flex-end; 
	padding: 10px 150px;
}

.navbar_login {
 	position:fixed;
	display: flex;
	top:10px;
	list-style: none;
	background-color:white; 
	text-decoration: none;
	padding: 10px 10px;
}

.login-a {
	font-size: 13px;
	color: black;
	text-decoration: none;
	padding: 5px 10px;
}

.login-aj {
	font-size: 13px;
	font-weight: bold;
	color: #cc00ff;
	text-decoration: none;
	padding: 5px 10px;
}

.navbar_login li :hover {
	text-decoration: underline;
	color: #cc00ff;
	font-weight: bold;
}

.header_margin {
	display: flex;
	flex-direction: column;
	width: 75%;
	align-items: center;
	padding: 10px 150px;
	margin: 0 0 0 70px;
}

.navbar {
	position:relative;
	top:10px; 
	width: 100%;
	margin: 0;
	display: flex;
	list-style: none;
	justify-content: space-between;
	align-items: center;
	background-color: white; 
	text-decoration: none;
}

.navbar_logo {
	display: flex;
	padding: 0;
}

.navbar_logo i{
	font-size: 30px;
	color: #660080;
}

.logo_a {
	text-decoration: none;
	font-size: 20px;
	font-weight: bold;
	color: #660080;
	margin:0 10px 0 20px;
}

.logo_a :hover{
	text-decoration: underline;
}

.camping {
	text-decoration: none; 
	font-size: 20px;
	color: #c2c2d6;
	margin:0 0 0 10px;
}

.comping :hover{
	text-decoration: underline;
}

.new {
	font-size: 4px;
	font-weight: bold;
	color: red;
	margin:0 20px 0 2px;
}

.search-input {
	position: absolute;
	text-align: center;
	top: 5px;
	padding: 0;
	list-style: none;
}

.search-input input{
	width: 400px; height: 25px;
	border:1px solid rgba(0,0,0,0.2);
    border-radius:7px;
    padding:25px 0 25px 20px;
    font-size: 15px;
    border-bottom: 1px solid rgba(0,0,0,0.2); 
    transition: border-color 1s ease-in-out;
    
}
.search-input {
	position: relative;
	background: white;
	width: 100%;
	border-radius: 7px;
	box-shadow: 0 2px 2px 2px rgba(0,0,0,0.12);
}

.search-input .search-icon {
	height: 20px;
	width: 20px;
	line-height:20px;
	position: absolute;
	top: 0;
	right: 0;
	text-align: center;
	font-size: 20px;
	color: #660080;
	cursor: pointer;
	padding: 15px 15px 0 0;
}

