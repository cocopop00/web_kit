.navbar_HC{
	display:flex;
	font-size: 25px;
	margin: 0;
	padding: 0 50px 0 0;	
	list-style: none;
}

.navbar_HC i{
	color: #d966ff; 
}

.navbar_HC i:hover{
	color: #660080;
}

.navbar_HC li{
	margin: 0 0 0 60px;
}
	
.navbar_HC .event {
	position:relative;
	float: right;
	font-size: 5px;
	color: #33cc33;
	padding:0;
	margin: 0;
}

.borderline {
	top: 130px;
	width:100%;
	border-top: solid; 	
	border-top-width: 11px;
	color: #d0d0e1;
	align-items: flex-end; 
	margin:0;
    border-right-width: 0px;
    border-left-width: 0px;
}


